<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.wisnu_krn.cumanjava.MainActivity">


    <LinearLayout
            android:id="@+id/checkbox1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <EditText
                android:id="@+id/editText_namaPembeli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama looo"
                android:inputType="textCapWords"
                android:layout_marginBottom="8dp"/>

        <android.support.v7.widget.AppCompatTextView
                style="@style/HeaderTextStyle"
                android:textColor="#000000"
                android:text="TOPPING"
                android:paddingLeft="8dp"/>

        <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/cokelat1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:text="Cokelat"
                android:textSize="16sp"/>

        <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/cokelat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:text="Buah"
                android:textSize="16sp"/>

        <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/cokelat3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:text="Campur"
                android:textSize="16sp"/>
    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/checkbox1"
            android:layout_marginTop="8dp"
            >

        <LinearLayout
                android:id="@+id/konten"
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JUMLAH"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:textColor="#000000"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                <android.support.v7.widget.AppCompatButton
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="28sp"
                        android:id="@+id/kurang"
                        android:layout_margin="8dp"/>

                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:id="@+id/banyak"
                        android:textColor="#000000"
                        android:text="0"
                        android:textSize="50sp"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"/>

                <android.support.v7.widget.AppCompatButton
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="48dp"
                        android:layout_margin="8dp"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textSize="28sp"
                        android:id="@+id/tambah"/>
            </LinearLayout>

